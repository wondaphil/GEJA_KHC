@model IEnumerable<GEJA_KHC_WEB.Models.GenderByGroup>
@using GEJA_KHC_WEB.ViewModels

<hr />
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title panel-info">የአባላት ብዛት በ<b>ፆታ</b> በየ<b>ምድቡ</b></h3>
    </div>

    <div class="panel-body">
        <br />
        <br />
        <table class="table table-striped table-condensed table-responsive table-bordered centeredtable display compact hover" style="font-size: medium" id="tblgenderbygroup">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.GroupId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.GroupName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Total)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Male)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Female)
                    </th>

                </tr>
            </thead>
            
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th>
                            @Html.DisplayFor(modelItem => item.GroupId)
                        </th>
                        <th>
                            @Html.DisplayFor(modelItem => item.GroupName)
                        </th>
                        <th>
                            @Html.DisplayFor(modelItem => item.Total)
                        </th>
                        <td>
                            @Html.DisplayFor(modelItem => item.Male)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Female)
                        </td>
                    </tr>
                }
                <tr style="background-color: #e9e9e9; font-style: italic">
                    <th></th>
                    <th><i>ጠቅላላ በሁሉም ምድቦች</i>)</th>
                    <th>@Model.Sum(m => m.Total)</th>
                    <th>@Model.Sum(m => m.Male)</th>
                    <th>@Model.Sum(m => m.Female)</th>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="panel-footer">
        <h3 class="panel-title">በጠቅላላ <b>@Model.Count()</b> ምድቦች እና <b>@Model.Sum(m => m.Total)</b> አባላት </h3>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#tblgenderbygroup').dataTable({
            paging: false,
            pageLength: 15,
            bLengthChange: true,
            scrollY: 400,
            searching: false,
            oLanguage: {
                sSearch: "<span style='font-size: large'> ፈልግ</span>",
                sLengthMenu: "<span style='font-size: medium'>በ1 ገጽ የሚታዩ መረጃዎች _MENU_ </span>",
                oPaginate: {
                    sNext: "<span style='font-size: large'> ወደ ፊት →</span>",
                    sPrevious: "<span style='font-size: large'> ← ወደ ኋላ</span>"
                },
                sZeroRecords: "<span style='font-size: large'>ያስገቡትን ፊደላት የሚያሟላ መረጃ የለም</span>",
                sEmptyTable: "<span style='font-size: large'>ምንም መረጃ የለም</span>",
                sInfo: "",
            },
            select: true,
            dom: 'lBfrtip',
            //order: [[1, "asc"]] // sort by the second column (BridgeNo)
            buttons: [
                { extend: "copy", className: "btn btn-sm btn-primary", text: "<span style='font-size: medium'>ኮፒ አድርግ</span>" },
                { extend: "excel", className: "btn btn-sm btn-primary", text: "<span style='font-size: medium'>ወደ Excel</span>" },
                { extend: "pdf", className: "btn btn-sm btn-primary", text: "<span style='font-size: medium'>ወደ PDF</span>" },
                { extend: "print", className: "btn btn-sm btn-primary", text: "<span style='font-size: medium'>ፕሪንት</span>" }
            ]
        });
    });
</script>
