@model GEJA_KHC_WEB.ViewModels.MemberViewModel

<div>
    <div class="row" style="font-size:medium">
        <div class="col-sm-4 col-xs-12">
            <table class="table">
                <tr style="background-color: #f5f5f5">
                    <td colspan="2" align="center"><h4><b>መሠረታዊ መረጃ</b></h4></td>
                </tr>
                <tr>
                    <td colspan="2">
                        @if (Model != null)
                        {
                            if (Model.MemberInfo != null)
                            {
                                @Html.Partial("MemberDetails", Model.MemberInfo, new ViewDataDictionary())
                            }
                            else
                            {
                                @Html.Partial("NoData")
                            }
                        }
                    </td>
                </tr>

                <tr style="background-color: #f5f5f5">
                    <td colspan="2" align="center"><h4><b>የአገልግሎት መረጃ</b></h4></td>
                </tr>
                <tr>
                    <td colspan="2">
                        @if (Model != null)
                        {
                            if (Model.MemberService.Count() > 0)
                            {
                                @Html.Partial("ServiceDetails", Model.MemberService, new ViewDataDictionary())
                            }
                            else
                            {
                                @Html.Partial("NoData")
                            }
                        }
                    </td>
                </tr>
            </table>
        </div>

        <div class="col-sm-4 col-xs-12">
            <table class="table">
                <tr style="background-color: #f5f5f5">
                    <td colspan="2" align="center"><h4><b>የአድራሻ መረጃ</b></h4></td>
                </tr>
                <tr>
                    <td colspan="2">
                        @if (Model != null)
                        {
                            if (Model.AddressInfo != null)
                            {
                                @Html.Partial("AddressDetails", Model.AddressInfo, new ViewDataDictionary())
                            }
                            else
                            {
                                @Html.Partial("NoData")
                            }
                        }
                    </td>
                </tr>

                <tr style="background-color: #f5f5f5">
                    <td colspan="2" align="center"><h4><b>የሥራና ትምህርት መረጃ</b></h4></td>
                </tr>
                <tr>
                    <td colspan="2">
                        @if (Model != null)
                        {
                            if (Model.EducationAndJobInfo != null)
                            {
                                @Html.Partial("EducationAndJobDetails", Model.EducationAndJobInfo, new ViewDataDictionary())
                            }
                            else
                            {
                                @Html.Partial("NoData")
                            }
                        }
                    </td>
                </tr>
            </table>
        </div>

        <div class="col-sm-4 col-xs-12">
            <table class="table">
                <tr style="background-color: #f5f5f5">
                    <td colspan="2" align="center"><h4><b>የቤተሰብ መረጃ</b></h4></td>
                </tr>
                <tr>
                    <td colspan="2">
                        @if (Model != null)
                        {
                            if (Model.FamilyInfo != null)
                            {
                                @Html.Partial("FamilyDetails", Model.FamilyInfo, new ViewDataDictionary())
                            }
                            else
                            {
                                @Html.Partial("NoData")
                            }
                        }
                    </td>
                </tr>

                <tr style="background-color: #f5f5f5">
                    <td colspan="2" align="center"><h4><b>ፎቶ</b></h4></td>
                </tr>
                <tr>
                    <td colspan="2">
                        @*@Html.EditorFor(model => model.PhotoFilePath, new { htmlAttributes = new { @class = "form-control" } })*@
                        @if (Model != null)
                        {
                            if (Model.MemberPhoto != null)
                            {
                                <img src="data:image/jpg;base64,@Convert.ToBase64String(Model.MemberPhoto.Photo)" id="photo" style="width: 100%" />
                            }
                            else
                            {
                                @Html.Partial("NoData")
                            }
                        }
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>