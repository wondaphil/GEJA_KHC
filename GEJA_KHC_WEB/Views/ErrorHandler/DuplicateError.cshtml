    ViewBag.Title = "የመረጃ ድግምግሞሸ ስህተት";
}

<h2>የመረጃ ድግምግሞሸ ስህተት</h2>

@{
    string errorCode = ViewBag.ErrorCode;
    HtmlString message1;
    HtmlString message2;
}
@switch (errorCode)
{
    //Group
    case "1":
        message1 = new HtmlString("የምድብ መረጃ መመዝገብ አልተቻለም!");
