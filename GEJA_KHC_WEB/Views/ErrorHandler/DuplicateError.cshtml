        break;

    //Education Level
    case "3":
        message1 = new HtmlString("የትምህርት ደረጃ መረጃ መመዝገብ አልተቻለም!");
        message2 = new HtmlString("ሊመዘግቡ እየሞከሩ ያሉት <b>የትምህርት ደረጃ</b> አስቀድሞ የተመዘገበ ስለሆነ የመረጃ ድግምግሞሸ ይፈጥራል። <br /><br />እባክዎች ሌላ የትምህርት ደረጃ ስም ቀይረው እንደገና ይሞክሩ።");
        break;

    //Field of Study
    case "4":
        message1 = new HtmlString("የትምህርት መስክ መረጃ መመዝገብ አልተቻለም!");
        message2 = new HtmlString("ሊመዘግቡ እየሞከሩ ያሉት <b>የትምህርት መስክ</b> አስቀድሞ የተመዘገበ ስለሆነ የመረጃ ድግምግሞሸ ይፈጥራል። <br /><br />እባክዎች ሌላ የትምህርት መስክ ስም ቀይረው እንደገና ይሞክሩ።");
        break;

    //Job
    case "5":
        message1 = new HtmlString("የሥራ ዘርፍ መረጃ መመዝገብ አልተቻለም!");
